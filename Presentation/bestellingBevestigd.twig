{# bestellingBevestigd.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>Bestelling Bevestigd</title>
</head>
<body>
    <h1>Bedankt voor je bestelling!</h1>

    <h2>Bestellingsgegevens</h2>
    <p><strong>Datum:</strong> {{ bestelling.getDatum() }}</p>
    <p><strong>Adres:</strong> {{ bestelling.getAdres() }}</p>
    <p><strong>Totaalprijs:</strong> €{{ bestelling.getTotaalprijs()|number_format(2, ',', '.') }}</p>

    <h3>Bestelde producten</h3>
    <ul>
        {% for lijn in bestelling.getBestellijnen() %}
            <li>
                {{ lijn.getProductNaam() }}  
                Aantal: {{ lijn.getAantal() }}  
                Prijs per stuk: €{{ lijn.getPrijs()|number_format(2, ',', '.') }}
                Subtotaal: €{{ (lijn.getPrijs() * lijn.getAantal())|number_format(2, ',', '.') }}
            </li>
        {% endfor %}
    </ul>

    <a href="index.php">Terug naar winkel</a>
</body>
</html>
