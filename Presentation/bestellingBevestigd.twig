{# bestellingBevestigd.twig #}
{% extends "layout.twig" %}

{% block title %}Bestelling Bevestigd - Pizzeria{% endblock %}

{% block content %}
<div class="container confirmation">

    <h1>üçï Bedankt voor je bestelling!</h1>
    <p>We hebben je bestelling goed ontvangen en gaan er meteen mee aan de slag.</p>

    <div class="order-summary">
        <h2>Bestellingsgegevens</h2>
        <p><strong>Datum:</strong> {{ bestelling.getDatum()|date("d-m-Y H:i") }}</p>
        <p><strong>Adres:</strong> {{ bestelling.getAdres() }}</p>
        <p><strong>Totaalprijs:</strong> ‚Ç¨{{ bestelling.getTotaalprijs()|number_format(2, ',', '.') }}</p>
    </div>

    <div class="order-items">
        <h3>Bestelde producten</h3>
        <ul>
            {% for lijn in bestelling.getBestellijnen() %}
                <li class="order-item">
                    <span class="product-name">{{ lijn.getProductNaam() }}</span>
                    <span>Aantal: {{ lijn.getAantal() }}</span>
                    <span>Prijs: ‚Ç¨{{ lijn.getPrijs()|number_format(2, ',', '.') }}</span>
                    <span class="subtotal">Subtotaal: ‚Ç¨{{ (lijn.getPrijs() * lijn.getAantal())|number_format(2, ',', '.') }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <a href="index.php" class="btn btn-green">Terug naar winkel</a>
</div>
{% endblock %}
